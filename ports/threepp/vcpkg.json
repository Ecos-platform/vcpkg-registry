{
  "name": "threepp",
  "version-date": "2023-03-17",
  "description": "C++17 port of three.js",
  "homepage": "https://github.com/markaren/threepp",
  "dependencies": [
    "glad",
    "glfw3",
    "stb",
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    }
  ],
  "features": {
		"curl": {
		  "description": "Enable URLFetcher in library.",
		  "dependencies": [
			"curl"
		  ]
		},
		"json": {
		  "description": "Enable JSON support in library. Required to use Fonts.",
		  "dependencies":[
			"nlohmann-json"
		  ]
		}
	}
}
