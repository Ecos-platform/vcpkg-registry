vcpkg_check_linkage(ONLY_STATIC_LIBRARY)

vcpkg_from_github(
    OUT_SOURCE_PATH SOURCE_PATH
	REPO Ecos-platform/fmilib-cpp
	REF aa0589a7052639e594f75604e834612754295ccf
	SHA512 918625ef64793134fa254475b99ce16bb0b6a3080fa05eb790e1f1465e37204ccc53f7fec8b66a34052bb58a27f3fff7459d17e610758f10622c065efde551b0
